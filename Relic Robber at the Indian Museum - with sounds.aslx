  <timer name="Helicopter Arrival">
    <interval>20</interval>
    <script>
      msg ("You hear the noise of the helicopter nearby. ")
      if (game.pov.parent = Courtyard) {
        MakeObjectVisible (Ladder)
        play sound ("Military Helicopter-SoundBible.com-1009489035.mp3", false, false)
        msg ("You look above and you see a helicopter lowering its ladder for you.")
        msg ("Do you want to climb the ladder?")
        SetTimerInterval (Helicopter Arrival, 60)
      }
    </script>
