          if (Coffee.parent = Player) {
            msg ("You see the room service assistant again. You decided to ignore her since you already have your coffee.")
          }
          else {
            msg ("You greeted the lady and decided to order some coffee. ")
            AddToInventory (Coffee)
          }
          EnableTimer (Knocking on Door)
        }
        else if (Door.visitor = Assassin) {
          msg ("You opened the door to greet the women. Before you could even react, you were already dead. ")
          finish
        }
        else if (Door.visitor = Deliverer) {
